
.body{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.mid{
  margin-left: 0%;
  margin-top: 0%;
  padding: 0;
  display: flex;
  flex-direction: column;
  position: fixed;
  width: 100%;
  

}
.main{
  position: absolute;
  top:10%;
  width: 100%;
  display: flex;
  flex-direction: row;
}



.view-canteen{
  position: absolute;
  
}
.s {
  width: 100%;
  height: 40px;
  text-align: center;
  border-bottom: 1px solid#888888;
  color: #888888;
}

.s:hover{
  color: #000000;
  background-color: #cccccc;
}
.topnav {
  position: sticky;
  background-color: #eeeeee;
  border: 1px solid#888888;
  display: flex;
  grid-area: right;
  flex-direction: row;
  justify-content: flex-end;
  width: 100%;
  height: 30px;
  overflow: hidden;
}
.topnav view {
  float: left;
  display: block;
  color: #888888;
  text-align: center;
  padding: 5px 8px;
  text-decoration: none;
}
